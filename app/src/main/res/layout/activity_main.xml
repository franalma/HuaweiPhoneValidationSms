<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_button_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="sign sms" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your phone number with prefix"
            android:textSize="20sp" />

        <EditText android:id="@+id/id_phone_number"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:text="34647394970"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_centerInParent="true">
        <EditText android:id="@+id/id_num1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:hint="0"
            android:textSize="15sp"
            android:layout_margin="15dp"/>

        <EditText android:id="@+id/id_num2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:hint="0"
            android:textSize="15sp"
            android:layout_margin="15dp"/>

        <EditText android:id="@+id/id_num3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:hint="0"
            android:textSize="15sp"
            android:layout_margin="15dp"/>

        <EditText android:id="@+id/id_num4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:hint="0"
            android:textSize="15sp"
            android:layout_margin="15dp"/>

        <EditText android:id="@+id/id_num5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:hint="0"
            android:textSize="15sp"
            android:layout_margin="15dp"/>



    </LinearLayout>


</RelativeLayout>